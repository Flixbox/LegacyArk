<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Animal Base -->
  <ThingDef ParentName="AnimalThingBase">
    <defName>HighlandCow</defName>
    <label>highland cow</label>
    <description>Highland cattle have long horns and wavy coats of fur. They are very hardy breed of cattle and adapt at living in harsh environments.  Highlands are primarily bred for their high quality meat and milk.</description>
    <statBases>
      <MoveSpeed>3.1</MoveSpeed>
      <ComfyTemperatureMin>-35</ComfyTemperatureMin>
      <MarketValue>350</MarketValue>
      <Mass>500</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>HighlandMilk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>4</milkAmount>
      </li>
    </comps>
    <tools>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8.8</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <label>left hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithHooves</body>
      <herdAnimal>true</herdAnimal>
      <packAnimal>false</packAnimal>
      <baseBodySize>1.8</baseBodySize>
      <baseHungerRate>0.9</baseHungerRate>
      <baseHealthScale>1.5</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Plain</leatherDef>
      <trainability>Intermediate</trainability>
      <wildness>0.15</wildness>
      <petness>0.05</petness>
      <nuzzleMtbHours>120</nuzzleMtbHours>
      <gestationPeriodDays>50</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 0.85)</li>
          <li>(2, 0.15)</li>
          <li>(2.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>20</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.5</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>2.0</minAge>
          <soundWounded>Pawn_Muffalo_Wounded</soundWounded>
          <soundDeath>Pawn_Muffalo_Death</soundDeath>
          <soundCall>Pawn_Muffalo_Call</soundCall>
          <soundAngry>Pawn_Muffalo_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
      <li>AnimalFarm</li>
      <li>LA_Livestock</li>
    </tradeTags>
  </ThingDef>
